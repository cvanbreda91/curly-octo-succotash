<div class="container">
  <div class="row">
<article class="col-8">
  <h2>
    Edit Post
  </h2>
  <form class="edit-post-form">
    <div>
      <input id="edit-post-title" name="post-title" type="text" value="{{post.title}}"/><br>
      <textarea id="edit-post-blog" name="blog-post" type="text" value="{{post.blog_post}}"></textarea>
    </div>
    <div>
      by you on {{format_date post.created_at}}
      |
      <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <button type="submit" class="btn">Save post</button>
    <button type="button" class="delete-post-btn btn">Delete post</button>
  </form>
</article>

<form class="comment-form col-4">
  <div>
    <textarea name="comment-body"></textarea>
  </div>

  <div>
    <button type="submit" class="btn">add comment</button>
  </div>
</form>

{{> comments post.comments}}
  </div>
</div>

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>