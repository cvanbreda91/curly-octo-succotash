<article>
  <div class="card-body">
    <a class="card-title" href="post/{{id}}">{{title}}</a><br><br>
    <div>{{format_post blog_post}}...</div>
  <div class="card-subtitle mb-2 text-muted"><br>
    by {{user.username}} on {{format_date created_at}}
    |
    <br><a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
  </div>
  </div>
</article>
